# Backend environment variables
# Rename this file to ".env" for local development.

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/site-professor-yago

# JWT secrets (examples only; replace in production)
JWT_SECRET=change-me
JWT_EXPIRES_IN=7d

# Cloudinary credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: allow direct file URLs even when Cloudinary is configured
# Set to "true" to accept fileUrl payloads in /api/uploads/essay
ALLOW_DIRECT_FILE_URL=false

# General app config
NODE_ENV=development
PORT=5050
API_PREFIX=/api
APP_DOMAIN=http://localhost:5173
